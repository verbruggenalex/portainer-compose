[
  {
    "type": "container",
    "title": "fpfis/php71-dev",
    "description": "Open-source HTTP server",
    "categories": ["webserver"],
    "platform": "linux",
    "logo": "https://cloudinovasi.id/assets/img/logos/httpd.png",
    "image": "fpfis/php71-dev",
    "ports": [
      "8080/tcp"
    ],
    "env": [
      {
        "name": "DOCUMENT_ROOT",
        "label": "Document root",
        "set": "/var/www/html/build"
      }
    ],
    "volumes": ["/usr/local/apache2/htdocs/"]
  },
  {
    "type": "container",
    "title": "fpfis/mysql56",
    "description": "The most popular open-source database",
    "categories": ["database"],
    "platform": "linux",
    "logo": "https://cloudinovasi.id/assets/img/logos/mysql.png",
    "image": "fpfis/mysql56",
    "ports": [
      "3306/tcp"
    ],
    "volumes": ["/var/lib/mysql"]
  },
  {
    "type": "stack",
    "title": "FPFIS Multisite",
    "description": "FPFIS Multisites powered by toolkit",
    "note": "Sets up a codebase, installs or clones a project.",
    "categories": ["website"],
    "platform": "linux",
    "logo": "https://www.rga.eu.com/wp-content/uploads/european-commission.png",
    "repository": {
      "url": "./",
      "stackfile": "stacks/subsite.yml"
    },
    "env": [
      {
        "name": "PROJECT_REPOSITORY",
        "label": "Repository url",
        "description": "The url of the repository to clone."
      },
      {
        "name": "BUILD_TYPE",
        "label": "Website setup",
        "description": "Allows you to set up a codebase, installation or clone.",
        "select": [
          {
            "text": "Codebase",
            "value": "code"
          },
          {
            "text": "Installation",
            "value": "install"
          },
          {
            "text": "Clone",
            "value": "clone"
          }
        ]
      }
    ],
    "volumes": ["horizon2020:/var/www/html"]
  }
]
